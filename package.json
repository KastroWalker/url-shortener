{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "Encurtador de URL com suporte a planos **Free** e **Pago**, redirecionamento inteligente e painel de administração para gerenciamento de links.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "db:migrate": "export $(cat .env.local | grep \"^[^#;]\" |xargs); prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KastroWalker/url-shortener.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KastroWalker/url-shortener/issues"
  },
  "homepage": "https://github.com/KastroWalker/url-shortener#readme",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "prisma": "^6.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jiti": "^2.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}